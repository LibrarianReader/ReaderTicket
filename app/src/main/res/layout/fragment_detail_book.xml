<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/til_imageView_book_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@android:color/transparent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView_books_info"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/item_book_2" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/imageView_favorite"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView_share"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/zakladka" />


    <TextView
        android:id="@+id/tv_title_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/alata"
        android:text="Убить пересмешника"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_imageView_book_info" />

    <TextView
        android:id="@+id/tv_author_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Харпер Ли"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_book"/>


    <TextView
        android:id="@+id/tv_defail_author_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Автор"
        android:textColor="#6D6E71"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_author_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_author_book" />

    <TextView
        android:id="@+id/tv_count_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alata"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_defail_genre_book"
        app:layout_constraintStart_toEndOf="@+id/tv_defail_author_book"
        app:layout_constraintTop_toBottomOf="@id/tv_title_book" />


    <TextView
        android:id="@+id/tv_defail_count_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Экземпляров"
        android:textColor="#6D6E71"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_count_book"
        app:layout_constraintStart_toStartOf="@+id/tv_count_book"
        app:layout_constraintTop_toBottomOf="@id/tv_count_book" />

    <TextView
        android:id="@+id/tv_genre_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alata"
        android:text="Роман"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_defail_genre_book"
        app:layout_constraintStart_toStartOf="@+id/tv_defail_genre_book"
        app:layout_constraintTop_toBottomOf="@id/tv_title_book" />


    <TextView
        android:id="@+id/tv_defail_genre_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Жанр"
        android:textColor="#6D6E71"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_genre_book"/>

    <TextView
        android:id="@+id/tv_description_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/alata"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_defail_author_book" />

    <Button
        android:id="@+id/btBronBook"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#000080"
        android:fontFamily="sans-serif-medium"
        android:text="Забронировать"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />



</androidx.constraintlayout.widget.ConstraintLayout>